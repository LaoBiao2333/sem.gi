    <script>
        $(function () {
            $(".banner").mousemove(function (e) {
                var x = (e.pageX * -1 / 2), y = (e.pageY * -1 / 2);
                $(this).find(".banner-move").css('left', (x /30)+ 'px ' );
                $(this).find(".banner-move").css('top', (y /30 + 507)+ 'px ' );
            })
            var swiperB4 = new Swiper('.b4 .swiper-container', {
                effect : 'coverflow',
                loop : true,
                slidesPerView: 1.7,
                oopedSlides : 3,
                centeredSlides: true,
                coverflow: {
                    rotate: 0,
                    stretch: 30,
                    depth: 120,
                    modifier: 3,
                    slideShadows : false
                }
            });
        })
    </script>
